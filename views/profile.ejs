<!doctype html>
<html>
<head>
    <title>Movie Reviews</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/9519e19407.js" crossorigin="anonymous"></script>
</head>
<body>
<div class="container profileContain">
  <h1 class="profileh1">MOVIE REVIEWS</h1>
  <p>Click the button, get a random movie, and leave a review!</p>

  <section class="movie">
    <p id="movieTitle"></p>
    <p id="tag"></p>
    <p id="desc"></p>
    <button id="btn" type="button" name="button">Random Movie</button>

  </section>


    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 stuff">
          <h2>Add a review</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input class="in" type="text" value="<%= user.local.email %>" name="name">
            <input class="in" type="text" placeholder="Movie To Review" name="movie">
            <input class="in" type="text" placeholder="Review" name="msg">
            <button class="sub" type="submit">Submit</button>
          </form>
        </div>

        <div class="col-sm-6">
          <h3>REVIEWS</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class="name"><%= messages[i].name %></span>
              <span class="msg"><%= messages[i].msg %></span>
              <span class="movie"><%= messages[i].movie %></span>
              <span class="count"><%= messages[i].thumbUp %></span>
              <span class="star"><i class="fas fa-star" aria-hidden="true"></i></span>
              <span class="poo"><i class="fas fa-poo" aria-hidden="true"></i></i></span>
              <span class="trash"><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>


        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
